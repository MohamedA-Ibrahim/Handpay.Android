<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_50"
    tools:context=".ui.paymenttesting.PaymentTestingFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:paddingBottom="80dp">

        <!-- Header Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/rounded_header_background"
            android:padding="24dp"
            android:layout_marginBottom="24dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Payment Testing"
                android:textSize="28sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:layout_marginBottom="8dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Test Near Pay integration"
                android:textSize="16sp"
                android:textColor="@color/white"
                android:alpha="0.9" />

        </LinearLayout>

        <!-- Setup Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/rounded_card_background"
            android:padding="24dp"
            android:layout_marginBottom="24dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Near Pay Setup"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/gray_900"
                android:layout_marginBottom="16dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="First, setup Near Pay SDK to enable payment processing"
                android:textSize="14sp"
                android:textColor="@color/gray_600"
                android:layout_marginBottom="16dp" />

            <Button
                android:id="@+id/btn_setup_near_pay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Setup Near Pay"
                android:textSize="16sp"
                android:textStyle="bold"
                android:background="@drawable/primary_button_background"
                android:textColor="@color/white"
                android:paddingVertical="16dp" />

        </LinearLayout>

        <!-- Payment Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/rounded_card_background"
            android:padding="24dp"
            android:layout_marginBottom="24dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Test Payment"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/gray_900"
                android:layout_marginBottom="16dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Amount: 14.55 SAR\nReference: 9ace70b7-977d-4094-b7f4-4ecb17de6753"
                android:textSize="14sp"
                android:textColor="@color/gray_600"
                android:layout_marginBottom="16dp" />

            <Button
                android:id="@+id/btn_start_payment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Start Payment"
                android:textSize="16sp"
                android:textStyle="bold"
                android:background="@drawable/secondary_button_background"
                android:textColor="@color/white"
                android:paddingVertical="16dp"
                android:enabled="false" />

        </LinearLayout>

        <!-- Status Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/rounded_card_background"
            android:padding="24dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Status"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/gray_900"
                android:layout_marginBottom="16dp" />

            <TextView
                android:id="@+id/tv_status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ready to setup Near Pay"
                android:textSize="16sp"
                android:textColor="@color/gray_700"
                android:background="@drawable/search_background"
                android:padding="16dp"
                android:minHeight="80dp"
                android:gravity="center" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>
